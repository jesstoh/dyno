<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../../partials/head.ejs") %>
        <link rel="stylesheet" href="/css/new_post.css">

        <script>
        
        let tagArray = '<%-JSON.stringify(post.tags)%>';
        
        </script>

        <script src="/js/post_edit.js"></script>
    </head>
    <body>
        <header>
            <%- include("../../partials/nav.ejs") %>
        </header>
        <main>
            <div class="container section">
                <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="url" id="img" name="img" value="<%=post.img%>">
                            <label for="img">Image URL</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="url" id="video" name="video" value="<%=post.video%>">
                            <label for="video">Video URL</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" id="description" name="description" value="<%=post.description%>">
                            <label for="description">Description</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" id="location" name="location" value="<%=post.location%>">
                            <label for="location">Location</label>
                        </div>
                    </div>
                    <!-- <div class="row">
                        <div class="input-field col s12">
                            <input type="text" id="tags" name="tags" value="<%=post.tags%>">
                            <label for="tags">Tags</label>
                        </div>
                    </div> -->
                    <div class="row">
                        <div class="input-field col s12">
                            <div class="chips">
                                <input class="custom-class">
                            </div>
                            <input type="hidden" id="tags" name="tags">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 center-align">
                            <button class="btn orange" type="submit">EDIT</button>
                        </div>
                    </div>

                    
                </form>
            </div>
        </main>
        <footer>
            <%- include("../../partials/footer.ejs") %>
        </footer>
        
    </body>
</html>