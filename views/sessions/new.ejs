<!DOCTYPE html>
    <html lang="en">
    <head>
        <%- include("../partials/head.ejs") %>
        <link rel="stylesheet" href="/css/landing.css">
    </head>
    <body>
        <main>
            <%- include("../partials/slides.ejs") %>

            <div class="action-container">
                <nav>
                    <div class="nav-wrapper blue darken-2">
                        <a href="/" class="brand-logo center">DYNO</a>
                        <ul class="right">
                            <li><a href="/signup">Sign Up</a></li>
                        </ul>
                    </div>
                </nav>
                <div class="container section form-container">
                    <form action="/login" method="POST">
                        <h5 class="center-align">Welcome back</h5>
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="text" name="username" id="username" required>
                                <label for="username">Username</label>
                                <% if (wrongUser) { %>
                                    <p class="red-text">Username not valid</p>
                                <%} %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="password" name="password" id="password" minLength="6" maxLength="12" class="validate" required>
                                <label for="password">Password</label>
                                <% if (wrongPassword) { %>
                                    <p class="red-text">Incorrect Password</p>
                                <%} %>                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field center">
                                <input type="submit" class="btn blue" value="Log In">
                            </div>
                        </div>
                        
                    </form>

                    <div class="row">
                        Not on Dyno yet? <a href="/signup">Sign Up</a>
                    </div>
                </div>
                
            </div>

        </main>
        
        <footer>
            <%- include("../partials/footer.ejs") %>
        </footer>
        <script>
            if (<%=wrongUser%> || <%=wrongPassword%>) {
                $(".form-container").addClass("wrong-info");
            };
        </script>
    </body>
</html>