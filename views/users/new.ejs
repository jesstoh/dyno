<!DOCTYPE html>
    <html lang="en">
    <head>
        <%- include("../partials/head.ejs") %>
        <link rel="stylesheet" href="/css/landing.css">
    </head>
    <body>
        <main>
            <%- include("../partials/slides.ejs") %>
            <div class="action-container">
                <nav>
                    <div class="nav-wrapper blue darken-2">
                        <a href="/" class="brand-logo center">DYNO</a>
                        <ul class="right">
                            <li><a href="/login">Log In</a></li>
                        </ul>
                    </div>
                </nav>
                <div class="container section form-container">
                    <form action="/signup" method="POST">
                        <h5 class="center-align">Welcome to Dyno</h5>
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="text" name="username" id="username" pattern="[a-zA-Z0-9]{4,12}" class="validate" title="Only 4 - 12 alphanumeric char is allowed" required>
                                <label for="username">Username</label>
                                <% if (taken) { %>
                                    <p class="red-text">Username is already taken</p>
                                <%} %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="password" name="password" id="password" class="validate" pattern="[a-zA-Z0-9!#@&$]{6,12}" title="Select 6 - 12 Alphanumeric & special char !#@&$"required>
                                <label for="password">Password</label>
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field center">
                                <input type="submit" class="btn blue" value="Sign Up">
                            </div>
                        </div>                            
                    </form>

                    <div class="row">
                        Already have an account? <a href="/login">Log In</a>
                    </div>
                </div>
                
            </div>

        </main>
        
        <footer>
            <%- include("../partials/footer.ejs") %>
        </footer>
        <script>
            if (<%=taken%>) {
                $(".form-container").addClass("wrong-info");
            };
        </script>
    </body>
</html>